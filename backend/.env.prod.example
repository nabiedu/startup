# ============================================================================
# Production Environment Variables (backend)
# Копируйте в .env и заполните реальные значения
# ============================================================================

# Environment
NODE_ENV=production

# Server
PORT=4000
CORS_ORIGIN=https://your-frontend-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://dokwork_user:your-secure-password@postgres:5432/dokwork_prod

# JWT Authentication
JWT_SECRET=your-very-secure-random-secret-key-minimum-32-characters

# Optional: Request logging level
LOG_LEVEL=info

# Optional: Sentry integration for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
